{
  "variables": {
    "version": ""
  },
  "provisioners": [
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/sshd.sh",
        "scripts/vagrant.sh",
        "scripts/virtualbox.sh",
        "scripts/minimize.sh"
      ],
      "type": "shell"
    }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": "<up><wait><tab> inst.text inst.ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>",
      "boot_wait": "5s",
      "disk_size": 40960,
      "guest_os_type": "RedHat_64",
      "hard_drive_interface": "sata",
      "http_directory": "http",
      "iso_url": "http://download.rockylinux.org/pub/rocky/8.4/isos/x86_64/Rocky-8.4-x86_64-dvd1.iso",
      "iso_checksum": "sha256:ffe2fae67da6702d859cfb0b321561a5d616ce87a963d8a25b018c9c3d52d9a4",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_pty": "true",
      "ssh_timeout": "20m",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "packer-rockylinux8-x86_64",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "1024"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "output": "build/rockylinux8-{{.Provider}}.box",
        "keep_input_artifact": false
      },
      {
        "type": "vagrant-cloud",
        "box_tag": "hpc-unibe-ch/rockylinux8",
        "version": "{{user `version`}}"
      }
    ]
  ]
}
