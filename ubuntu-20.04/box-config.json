{
  "variables": {
    "version": ""
  },
  "provisioners": [
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/setup.sh",
        "scripts/cleanup.sh"
      ],
      "type": "shell"
    }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<enter><enter><wait<f6><esc><wait> ",
        "autoinstall ds=nocloud-net;s=http://{{ .HTTPIP }}:{{ .HTTPPort }}/",
        "<enter>"
      ],
      "boot_wait": "3s",
      "disk_size": 40960,
      "guest_os_type": "Ubuntu_64",
      "http_directory": "http",
      "iso_url": "http://www.releases.ubuntu.com/20.04/ubuntu-20.04.2-live-server-amd64.iso",
      "iso_checksum": "sha256:d1f2bf834bbe9bb43faf16f9be992a6f3935e65be0edece1dee2aa6eb1767423",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_pty": "true",
      "ssh_timeout": "20m",
      "shutdown_command": "sudo systemctl poweroff",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "packer-ubuntu-20.04-x86_64",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "1024"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "output": "build/ubuntu-18.04-amd64-virtualbox-nocm.box",
        "keep_input_artifact": false
      },
      {
        "type": "vagrant-cloud",
        "box_tag": "hpc-unibe-ch/ubuntu-focal64",
        "version": "{{user `version`}}"
      }
    ]
  ]
}
